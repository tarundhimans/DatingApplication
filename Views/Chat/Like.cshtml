@model IEnumerable<DatingApplication.Models.Match>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Rooms</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="text-center mt-4">Chat Rooms</h2>
        <div class="list-group mt-4">
            @foreach (var match in Model)
            {
                <a href="@Url.Action("Room", "Chat", new { userId1 = match.UserId, userId2 = match.MatchedUserId })" class="list-group-item list-group-item-action">
                    Chat with @match.MatchedUser.UserName
                </a>
            }
        </div>
    </div>
</body>
</html>
