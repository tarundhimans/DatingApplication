@model DatingApplication.Models.Profile

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-4">
    <h1 class="text-center">Edit Your Profile</h1>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="profile-edit-form">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="ProfilePicture" class="control-label"></label>
            <input type="file" asp-for="ProfilePicture" class="form-control" required />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.ProfilePicture)" alt="Profile Picture" class="img-thumbnail mt-3" width="150" height="150" />
            }
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="control-label"></label>
            <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Tell us about yourself..." required></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Preferences" class="control-label"></label>
            <input asp-for="Preferences" class="form-control" placeholder="What are your preferences?" required />
            <span asp-validation-for="Preferences" class="text-danger"></span>
        </div>

        <div class="form-group d-flex">
            <div class="me-2">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" placeholder="Day" min="1" max="31" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="me-2">
                <label asp-for="Month" class="control-label"></label>
                <input asp-for="Month" class="form-control" placeholder="Month"min="1" max="12" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" placeholder="Year"  min="1960" max="2008"/>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InterestedIn" class="control-label"></label>
            <select asp-for="InterestedIn" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="InterestedIn" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
        </div>
    </form>
</div>

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .profile-edit-form {
            background-color: #fff;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
        }

        .current-profile-picture {
            display: inline-block;
            margin-bottom: 15px;
        }

        .profile-picture-preview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
        }

        .form-control-file {
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
        }

        .form-group label {
            font-weight: bold;
            color: #555;
        }

        .btn-primary {
            background-color: #25d366;
            border-color: #25d366;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #1ebe57;
                border-color: #1ebe57;
            }

        .text-danger {
            color: #dc3545;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }

        .form-group {
            margin-bottom: 1rem;
        }
    </style>
}

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.7/jquery.validate.unobtrusive.min.js"></script>
}
